{
    "name": "smile/magento2-smilelab-phpstan",
    "type": "library",
    "license": "OSL-3.0",
    "description": "PHPStan Coding standards for Smile Lab Magento2 community projects.",
    "homepage": "https://github.com/Smile-SA/magento2-smilelab-phpstan",
    "keywords": [
        "php",
        "phpstan",
        "coding standards"
    ],
    "autoload": {
        "psr-4": {
            "Smile\\PhpStan\\": "src/"
        }
    },
    "require": {
        "php": "^7.3 || ^8.0",
        "magento/framework": "*",
        "phpstan/phpstan": "^0.12 || ^1.0",
        "squizlabs/php_codesniffer": "^3.5"
    },
    "repositories": [
        {
            "type": "composer",
            "url": "https://repo.magento.com/"
        }
    ],
    "config": {
        "allow-plugins": {
            "magento/composer-dependency-version-audit-plugin": true
        },
        "sort-packages": true
    },
    "extra": {
        "phpstan": {
            "includes": [
                "extension.neon"
            ]
        }
    }
}
